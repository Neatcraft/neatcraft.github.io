            "@type": "WebSite",
            "name": "NeatCraft",
            "url": "https://neatcraft.fr",
            "publisher": {
                "@type": "Organization",
                "name": "NeatCraft",
                "legalName": "NeatCraft SARL unipersonnelle",
                "identifier": "RCS 908 882 541",
                "taxID": "FR42908882541",
                "foundingDate": "2021",
                "foundingLocation": {
                    "@type": "Place",
                    "address": {
                        "@type": "PostalAddress",
                        "streetAddress": "38 Boulevard Pasteur",
                        "addressLocality": "Saint-Brieuc",
                        "postalCode": "22000",
                        "addressCountry": "FR"
                    }
                },
                "contactPoint": {
                    "@type": "ContactPoint",
                    "contactType": "Customer Service",
                    "name": "Antoine Carpier-Jouan",
                    "email": "antoine.jouan@neatcraft.fr",
                    "telephone": "+33-6-15-93-90-15",
                    "sameAs": "https://www.linkedin.com/in/jouana/",
