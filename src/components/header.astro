---
import {css} from "../../styled-system/css";
---
<header id="header" class={css({
    display: "flex",
    position: "fixed",
    top: "0",
    left: "0",
    justifyContent: {xs: "center", lg: "space-between"},
    paddingLeft: "2%",
    paddingRight: "2%",
    height: {_portrait: "10vh", _landscape: {xs: "20vh", lg: "8vh"}},
    width: "100%",
    bgColor: "primary.100",
    fontFamily: "montserrat",
    color: "white",
    fontSize: "0.8em",
    fontWeight: "500",
})}>
    <img id="logo-neatcraft-header" src="/img/logos/neatcraft.svg" alt="Neatcraft" class={css({
        _portrait: {
            width: "14vh",
            height: "14vh"
        },
        _landscape: {
            width: {xs: "8vw", lg: "5vw"},
            height: {xs: "8vw", lg: "5vw"},
        }
    })}/>
    <slot/>
</header>