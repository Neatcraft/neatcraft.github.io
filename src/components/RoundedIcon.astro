---
import {css} from "../../styled-system/css";

const {iconSrc, iconAlt, extendClass} = Astro.props;

---

<div class={css({
    borderRadius: "50%",
    width: "fit-content",
    height: "fit-content",
    border: "3px solid white",
}) + " " + extendClass}>
    <div class={css({
        borderRadius: "50%",
        width: "fit-content",
        border: "5px solid #ed7d1a",
        backgroundColor: "white",
        padding: "50px",
    })}>
        <img src={iconSrc} alt={iconAlt} class={css({
            xs: {
                width: "50px",
                height: "50px",
            },
            md: {
                width: "100px",
                height: "100px",
            }
        })} />
    </div>
</div>