---
import '../index.css';

import Mission from "../sections/mission.astro";
import Engagement from "../sections/valeurs.astro";
import Offre from "../sections/activite.astro";
import Navigation from "../components/navigation/navigation.astro";
import NavigationItem from "../components/navigation/navigationItem.astro";
import NavigationButton from "../components/navigation/navigationButton.astro";
import {css} from "../../styled-system/css";
import NavigationSeparator from "../components/navigation/navigationSeparator.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Vision from "../sections/engagement.astro";
import Contact from "../sections/contact.astro";
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <meta name="description" content="NeatCraft aide les entreprises à améliorer leur organisation, optimiser leurs processus et accroître leur productivité grâce à des solutions agiles." />

    <title>Neatcraft</title>


    <script type="application/ld+json">
