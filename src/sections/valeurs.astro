---
import {css} from "../../styled-system/css";
import {section, title} from "../../styled-system/patterns";
import SectionTitle from "../components/section/title/sectionTitle.astro";
import Paragraph from "../components/CircleInformation/Paragraph.astro";
import RoundedIcon from "../components/CircleInformation/RoundedIcon.astro";
import Title from "../components/CircleInformation/Title.astro";
import SectionTitleContainer from "../components/section/title/sectionTitleContainer.astro";
import SectionIconTitle from "../components/section/title/sectionIconTitle.astro";
---

<section id="valeur" class={section({
    bgColor: "third.100",
    bgImage: "url(/img/triangle.svg)",
    flexDir: "column",
    alignItems: "start",
})}>
    <SectionTitleContainer>
        <SectionIconTitle iconSrc="/img/icons/museum.svg" iconAlt="représente un temple grecque" iconClass={css({
            height: { xs: "6vh",  md: "12vh"},
            width: { xs: "6vh", md: "12vh"},
            marginX: "5%"
        })} />
        <SectionTitle  titleClass={title({color: "white"})}>
            valeurs
        </SectionTitle>
    </SectionTitleContainer>


    <div class={css({
        marginTop: "5%",
        marginX: "auto",
        lg: {
            display: "grid",
            gridTemplateColumns: "20vw 14vw 10vw 14vw 20vw",
            gridTemplateRows: "14vw 10vw 14vw",
            gap: "1em",
            alignItems: "normal",
            width: "max-content",
            height: "max-content",
        },
        xs: {
            display: "flex",
            flexDir: "column",
            alignItems: "center",
            textAlign: "center",
            width: "70%"

        }
    })}>
        <div aria-hidden="true" class={css({
            display: {xs: "none", lg: "block"},
            gridColumn: "2/5",
            gridRow: "1/6",
            borderRadius: "50%",
            border: "5px solid {colors.secondary.100}",
        })}/>
        <RoundedIcon iconSrc="/img/icons/compas.svg" iconAlt="compas"
                     extendClass={css({gridColumn: "2/3", gridRow: "1/2"})}/>
        <div class={css({gridColumn: "1/2", gridRow: "1/2", textAlign: "end",display:"flex",flexDirection: "column",justifyContent: "center",lg:{alignItems:"end"}})}>
            <Title>Excellence</Title>
            <Paragraph>
                La qualité n’est pas une option, mais une exigence incontournable dans toutes nos actions.
            </Paragraph>
        </div>

        <RoundedIcon iconSrc="/img/icons/speaker.svg" iconAlt="Speaker"
                     extendClass={css({gridColumn: "4/5", gridRow: "1/2"})}/>
        <div class={css({gridColumn: "5/6", gridRow: "1/2", textAlign: "start",display:"flex",flexDirection: "column",justifyContent: "center",lg:{alignItems: "start"}})}>
            <Title>Savoir</Title>
            <Paragraph>
                Les faits et la connaissance scientifique et théorique sont les bases de chaque décision, stratégie et action.
            </Paragraph>

        </div>

        <RoundedIcon iconSrc="/img/icons/ampoule.svg" iconAlt="Ampoule"
                     extendClass={css({gridColumn: "2/3", gridRow: "3/4"})}/>
        <div class={css({gridColumn: "1/2", gridRow: "3/4", textAlign: "end",display:"flex",flexDirection: "column",justifyContent: "center",lg:{alignItems: "end"}})}>
            <Title>Créativité</Title>
            <Paragraph>
                Explorer de nouvelles voies pour concevoir des solutions pertinentes et audacieuses.
            </Paragraph>
        </div>
        <RoundedIcon iconSrc="/img/icons/finger.svg" iconAlt="Finger"
                     extendClass={css({gridColumn: "4/5", gridRow: "3/4"})}/>
        <div class={css({gridColumn: "5/6", gridRow: "3/4", textAlign: "start",display:"flex",flexDirection: "column",justifyContent: "center",lg:{alignItems: "start"}})}>
            <Title>Service</Title>
            <Paragraph >
                S'engager pleinement pour répondre aux besoins de nos partenaires avec rigueur et attention.
            </Paragraph>
        </div>
    </div>
</section>
