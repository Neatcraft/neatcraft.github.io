---
const { id, name, type = "text", rows, required = true } = Astro.props;
import { css } from "../../../styled-system/css";
---
{type === "textarea" ? (
<textarea
        id={id}
        name={name}
        rows={rows}
        required={required}
        class={css({
            width: "100%",
            padding: "0.5rem",
            borderRadius: "4px",
            border: "1px solid #ccc",
            color: "black",
            boxSizing: "border-box",
        })}
></textarea>
    ) : (
<input
        type={type}
        id={id}
        name={name}
        required={required}
        class={css({
            width: "100%",
            padding: "0.5rem",
            borderRadius: "4px",
            border: "1px solid #ccc",
            color: "black",
            boxSizing: "border-box",
        })}
/>
    )}