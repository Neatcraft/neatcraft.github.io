                },
                "datePublished": "2024-10-24"
            },
            "policy": {
                "@type": "PrivacyPolicy",
                "name": "Politique de confidentialité",
                "url": "https://neatcraft.fr/privacy-policy",
                "requiresConsent": true,
                "usesCookies": true
            },
            "legalName": "NeatCraft SARL unipersonnelle",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "38 Boulevard Pasteur",
                "addressLocality": "Saint-Brieuc",
                "postalCode": "22000",
                "addressCountry": "FR"
            },
            "founder": {
                "@type": "Person",
                "name": "Antoine Jouan",
                "sameAs": "https://www.linkedin.com/in/jouana/",
